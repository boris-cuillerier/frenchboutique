{% extends 'base.html.twig' %}


{% block body %}
<div class="container my-5">
    <h1>Mon panier</h1>
    <div class="col-md-8">
        Liste de mes Produits
        {% for product in cart %}
            <div class="row mt-2">
                <div class="col-md-2">
                    <img src="/uploads/{{ product.object.illustration }}" class="img-fluid" alt="{{ product.object.name }}">
                </div>
                <div class="col-md-6">
                    <strong>{{ product.object.name }}</strong>
                    <span class="d-block">
                    <span class="d-block">Prix unitaire : {{ product.object.pricewt|price }}</span>
                </div>
                <div class="col-md-2 text-right">
                    <span class="badge text-bg-secondary">x{{ product.qty }}</span>
                </div>
                <div class="col-md-2">
                    {{ (product.qty*product.object.pricewt)|price }}
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="col-md-4">
        RÃ©cap du panier
    </div>
    
</div>
{% endblock %}
